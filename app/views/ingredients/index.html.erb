<%= render 'shared/page_title', title: 'showing all ingredients'%>

<div align='center'>
    <%= will_paginate %>
</div>

<div align='center'>
    <% @ingredients.each do |ingredient| %>
        <ul class='listing'> 
            <div class='row'>
                <div class='well col-md-4 col-md-offset-4'>
                    <li class='chef-title'> <%= link_to ingredient.name.capitalize, ingredient_path(ingredient) %> </li>
                    <li> <small> <%= pluralize(ingredient.recipes.count, 'recipe') if ingredient.recipes %> </small> </li>
                <% if is_logged_in && current_chef.try(:admin) %>
                    <li> <%= link_to 'Edit this ingredient', ingredient_path(ingredient) %> </li>
                <% end %>
                </div>
            </div>
        </ul>
    <% end %>
</div>