<h1 align='center'> Displaying all Recipes</h1>

<% @recipes.each do |recipe| %>
    <div class='row'>
        <div class='col-md-2'>
			<section class='center'>
			</section>
        </div>
    </div>
	<div class='col-md-8 well'>
		<h3> <%= recipe.name %>  </h3>
		<p> <%= truncate(recipe.description, length: 150) %> </p>
		<p> <span class='quiet'> <small>Created <%= time_ago_in_words(recipe.created_at) %> </small></span> </p>
	</div>
<% end %>
