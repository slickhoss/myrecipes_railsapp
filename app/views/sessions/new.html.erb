<%= render 'shared/page_title', title: 'Log in'%>
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |c| %>
            <div class='form-group'>
                <div class='control-label col-md-2'>
                    <%= c.label :email %>
                </div>
                <div class='col-md-8'>
                    <%= c.text_field :email, rows: 10, class: 'form-control', placeholder: 'Email'%>
                </div>
            </div>

            <div class='form-group'>
                <div class='control-label col-md-2'>
                    <%= c.label :password %>
                </div>
                <div class='col-md-8'>
                    <%= c.password_field :password, class: 'form-control', placeholder: 'Password'%>
                </div>
            </div>

            <div class='form-group'>
                <div class='col-md-offset-2 col-md-10'>
                    <%= c.submit 'Login', class: 'btn btn-primary btn-lg btn-xlarge'%>
                </div>
            </div>
        <% end %>

        <div class='col-md-6 col-md-offset-4 colormatch'>
            [ <%= link_to "Don't have an account? Sign up now!", new_chef_path %> ]
        </div>